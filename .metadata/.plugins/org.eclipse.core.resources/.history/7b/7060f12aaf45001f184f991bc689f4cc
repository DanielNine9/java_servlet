package servlet;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet({"/bai2/home", "/bai2/login", "/bai2/logout", "/bai2/register","/bai2/change-password", "/bai2/edit-profile",})
public class Bai2Servlet extends HttpServlet {
	
	
	@Override
	protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		String uri =req.getRequestURI();
		System.out.println(uri);
		if(uri.contains("/home")) {
			req.setAttribute("view", "/home.jsp");
		}else if (uri.contains("/login")) {
			req.setAttribute("view", "/login.jsp");
		}
		
		req.getRequestDispatcher("/bai2.jsp").forward(req, resp);
	}
}
